<body>
    <nav>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>

            <li>
        </ul>
    </nav>

    <header>
        <h1>Bora Lá deletar o Conteúdo!</h1></br>        
    </header>

    <% if(message != "") {  %>
        <section id="message">
            <p><%= message %></p> <span id="close">&times;</span>
        </section>
    <% }  %>
    
    <% if(conteudo != null) {  %>
        <section id="inscrever">
            <form action="/deletar/<%= conteudo.id %>" method="POST">
                <div>
                    <label for="id">Tem certeza que deseja deletar o conteúdo: </label>
                    <input type="text" name="id" id="id" placeholder="Digite uma Resposta" value="">
                </div>            
            
                <button type="submit">Deletar</button>
            </form>
        </section>
    <% }  %>

